<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Winui3BreadcrumbNavSample.Pages.HiearchicalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Winui3BreadcrumbNavSample.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:slocal="using:Winui3BreadcrumbNavSample.Services"
    slocal:NavigationService.ClearNavigationProperty="False"
    slocal:NavigationService.IsHeaderVisibleProperty="True"
    slocal:NavigationService.PageTitleProperty="Hiearchical Page"
    mc:Ignorable="d">

    <Grid Margin="58,42,58,0" RowSpacing="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="This page has been navigated to hierarchically" />
        <Button
            Grid.Row="1"
            Margin="4"
            Click="Button_Click"
            Content="Navigate Again" />
    </Grid>
</Page>
